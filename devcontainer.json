{
  "name": "docker-vm-workstation",
  "image": "mcr.microsoft.com/devcontainers/base:debian",
  "features": {
      "ghcr.io/nils-geistmann/devcontainers-features/zsh:0": {},
      "ghcr.io/devcontainers/features/github-cli:1": {},
      "ghcr.io/devcontainers/features/go:1": {
        "version": "1.22"
      },
      "ghcr.io/devcontainers/features/rust:1": {
        "version": "1.88.0"
      },
      "ghcr.io/devcontainers/features/node:1": {
        "version": "20",
        "installYarnUsingApt": false
      }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "vquelque.markfiles",
        "NomicFoundation.hardhat-solidity",
        "golang.Go",
        "rust-lang.rust-analyzer",
        "Cameron.rerun-last-command",
        "tintinweb.vscode-inline-bookmarks"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "zsh",
        "terminal.integrated.profiles.linux": { "zsh": { "path": "/usr/bin/zsh" } }
      }
    }
  },
  "postCreateCommand": "curl https://raw.githubusercontent.com/flackoon/devcontainers/refs/heads/master/install-tools.sh | zsh",
  "remoteUser": "vscode", // Run as non-root
  "containerUser": "vscode"
}
